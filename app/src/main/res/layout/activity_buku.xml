<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buku"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/hello"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daftar Buku"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:gravity="center"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginTop="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:padding="4dp"
                        android:src="@drawable/buku1"
                        android:layout_weight="3"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/imageView"
                            android:text="Buku Matematika - Rp. 150,000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textViewShortDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textViewTitle"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/imageView"
                            android:text="Buku yang berisi soal-soal matematika kelas SMP, sangat bermanfaat bagi siswa kelas 3 SMP."
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                        <TextView
                            android:id="@+id/genere1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textViewShortDesc"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/imageView"
                            android:background="@color/teal_700"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Pelajaran"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginTop="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/mariposa"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:padding="4dp"
                        android:src="@drawable/mariposa"
                        android:layout_weight="3"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/judul1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/mariposa"
                            android:text="Novel Mariposa - Rp. 80,000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/desc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/desc1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/mariposa"
                            android:text="Mariposa mengisahkan siswi bernama Acha yang menyukai Iqbal. Laki-laki tampan, pintar namun dingin itu diibaratkan Acha sebagai mariposa alias kupu-kupu..."
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                        <TextView
                            android:id="@+id/genere2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textViewShortDesc"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/imageView"
                            android:background="@color/teal_700"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Fiksi 路 Romantis 路 Komedi"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginTop="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/dilan"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:padding="4dp"
                        android:src="@drawable/dilan"
                        android:layout_weight="3"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/judul2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/dilan"
                            android:text="Novel Dilan - Rp. 70,000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/desc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/desc2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/dilan"
                            android:text="Novel Dilan ini menceritakan kisah cinta anak SMA yaitu Dilan. Ia adalah salah satu anak geng motor yang..."
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                        <TextView
                            android:id="@+id/genere3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/desc2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/dilan"
                            android:background="@color/teal_700"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Drama remaja . Romantis"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginTop="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/bukukimia"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:padding="4dp"
                        android:src="@drawable/kimia"
                        android:layout_weight="3"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/judul4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Buku Kimia - Rp. 150,000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/desc3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/desc3"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/bukukimia"
                            android:text="Buku yang berisi dasar dasar kimia kelas 1 SMA, sangat bermanfaat bagi siswa kelas 1 SMA."
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                        <TextView
                            android:id="@+id/genere4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/desc3"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/teal_700"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Pelajaran"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginTop="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/antares"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:padding="4dp"
                        android:src="@drawable/antares"
                        android:layout_weight="3"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/judul5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/antares"
                            android:text="Novel Antares - Rp. 79,000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/desc4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/desc4"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/antares"
                            android:text="Antares bercerita tentang dua remaja SMA yang saling jatuh cinta. Di sini ada tokoh bernama Antares Sebastian Aldevaro alias Antares itu sendiri..."
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                        <TextView
                            android:id="@+id/genere5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/desc4"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/antares"
                            android:background="@color/teal_700"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Aksi 路 Drama 路 Roman"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>